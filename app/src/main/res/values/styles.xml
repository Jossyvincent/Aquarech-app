<resources
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorDarkBlue</item>
        <item name="android:fontFamily">@font/regular_font</item>
        <item name="android:actionMenuTextAppearance">@style/Toolbar.TitleText</item>
    </style>

    <!-- re-design -->
    <style name="SplashScreenTheme" parent="AppTheme">
        <item name="colorPrimaryDark">@color/colorWhite</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:textColor">#000</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>
</resources>
