<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    
    <!-- Top image -->
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="391dp"
        android:layout_height="392dp"
        android:scaleType="centerCrop"
        android:src="@drawable/intro2_img"/>
    <!-- headline TextView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Order feeds from anywhere directly from your phone."
        android:textColor="#000000"
        android:textSize="30sp"
        android:fontFamily="@font/extra_bold_font"/>
    <!--Subtext -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Through our marketplace, you can order fish feeds and we will deliver directly to your farm."
        android:textColor="#555555"
        android:textSize="21sp"
        android:fontFamily="@font/regular"/>
    <!-- Bottom Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:scaleType="centerInside"
            android:src="@drawable/nextbutton" />
    </RelativeLayout>

</LinearLayout>    
