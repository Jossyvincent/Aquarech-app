<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    
    <!--Top image -->
    
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="391dp"
        android:layout_height="442dp"
        android:src="@drawable/intro3_img"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"/>

    <!-- TextView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="We provide a market for you to sell your fish"
        android:fontFamily="@font/extra_bold_font"
        android:textSize="34sp"
        android:textColor="#000000"/>
    <!-- Subtext textView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Not sure about where you can sell your fish? Let us know when they are ready of harvesting and we will come do the work and pay you."
        android:fontFamily="@font/regular"
        android:textFontWeight=""
        android:textColor="@color/gray600"
        android:textSize="21sp"/>

    <!-- button -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primayBlue"
        android:text="Create Account"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>
    <!-- bottom textView -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:text="Already a member? Log in"
        android:fontFamily="@font/regular"/>

</LinearLayout>